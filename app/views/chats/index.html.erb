<h1>Chats</h1>

<table>
  <tr>
    <th>Chat ID</th>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Actions</th>
  </tr>

  <% @chats.each do |chat| %>
    <tr>
      <td><%= chat.id %></td>
      <td><%= chat.sender.first_name %> <%= chat.sender.last_name %></td>
      <td><%= chat.receiver.first_name %> <%= chat.receiver.last_name %></td>
      <td><%= link_to 'Show', chat_path(chat) %> | <%= link_to 'Edit', edit_chat_path(chat) %></td>
    </tr>
  <% end %>
</table>

<hr>

<%= link_to 'Start New Chat', new_chat_path, class: "btn btn-primary" %>