<h1>Users</h1>

<table>
  <tr>
    <th>User ID</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Total Messages</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.messages.count %></td>
      <td><%= link_to 'Show', user_path(user) %> | <%= link_to 'Edit', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>

<hr>

<%= link_to 'Add New User', new_user_path, class: "btn btn-primary" %>